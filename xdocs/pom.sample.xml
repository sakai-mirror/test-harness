<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>my-base</artifactId>
    <groupId>org.sakaiproject</groupId>
    <version>M2</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <name>sakai-my-integration-test</name>
  <groupId>org.sakaiproject</groupId>
  <artifactId>sakai-my-integration-test</artifactId>
  <dependencies>
    <!-- Test harness -->
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-test-harness</artifactId>
      <version>${sakai.version}</version>
    </dependency>

    <!-- In case you'd like to log anything. -->
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
    </dependency>

	<!-- Add any APIs or other JARs your tests need -->
	<!-- ... -->

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>

        <!-- Need at least this version to avoid forkMode / log4j bug -->
        <version>2.4.3</version>
        <configuration>

          <!-- Pass through the most important Java system properties -->
          <systemProperties>
            <property>
              <name>test.tomcat.home</name>
              <value>${test.tomcat.home}</value>
            </property>
            <property>
              <name>maven.tomcat.home</name>
              <value>${maven.tomcat.home}</value>
            </property>
            <property>
              <name>test.sakai.home</name>
              <value>${test.sakai.home}</value>
            </property>
          </systemProperties>

          <!--
          	Uncomment the next line if you have multiple tests that use
          	different Sakai configurations. Otherwise, static data may hang around
          	component classes and break your tests.
          -->
          <!-- <forkMode>pertest</forkMode> -->
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
