<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>base</artifactId>
    <groupId>org.sakaiproject</groupId>
    <version>SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <name>sakai-test-integration-test</name>
  <groupId>org.sakaiproject</groupId>
  <artifactId>sakai-test-integration-test</artifactId>
  <dependencies>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-test-harness</artifactId>
      <version>${sakai.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-component-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-entity-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.sakaiproject</groupId>
      <artifactId>sakai-site-api</artifactId>
    </dependency>

    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>${sakai.spring.mock.artifactId}</artifactId>
      <version>${sakai.spring.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <!-- TODO Fix in master POM -->
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <!-- TODO These settings should all be set as defaults in the master POM -->
        <version>2.4.3</version>
        <configuration>
          <systemProperties>
            <property>
              <name>test.tomcat.home</name>
              <value>${test.tomcat.home}</value>
            </property>
            <property>
              <name>maven.tomcat.home</name>
              <value>${maven.tomcat.home}</value>
            </property>
            <property>
              <name>test.sakai.home</name>
              <value>${test.sakai.home}</value>
            </property>
          </systemProperties>

          <!-- Need to clear out static configuration data between tests. -->
          <forkMode>pertest</forkMode>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
